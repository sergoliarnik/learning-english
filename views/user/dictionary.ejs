<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/create-dictionary.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<div>
    <h1 class='create-dictionary'>Create a Dictionary</h1>
    <form class='create-dictionary' id="dictionaryForm" method='post' action='/dictionary'>
        <label for="word">Word:</label>
        <input type="text" id="word" name="word" required>

        <label for="definition">Definition:</label>
        <input type="text" id="definition" name="definition" required>

        <input type='submit' value="Add Word">
    </form>

    <table class='create-dictionary' id="dictionary">
        <thead class='create-dictionary'>
        <tr class='create-dictionary'>
            <th class='create-dictionary'>Word</th>
            <th class='create-dictionary'>Definition</th>
        </tr>
        </thead>
        <tbody class='create-dictionary' id="dictionaryBody">
        <% for (word of words) { %>
            <tr class='create-dictionary'>
                <td class='create-dictionary'><%= word.text ;%></td>
                <td class='create-dictionary'><%= word.definition ;%></td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
</body>
</html>