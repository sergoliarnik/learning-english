<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/create-dictionary.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<div>
    <h1>Create a Dictionary</h1>
    <form id="dictionaryForm" method='post' action='/dictionary'>
        <label for="word">Word:</label>
        <input type="text" id="word" name="word" required>

        <label for="definition">Definition:</label>
        <input type="text" id="definition" name="definition" required>

        <input type='submit' value="Add Word">
    </form>

    <table id="dictionary">
        <thead>
        <tr>
            <th>Word</th>
            <th>Definition</th>
        </tr>
        </thead>
        <tbody id="dictionaryBody">
        <% for (word of words) { %>
            <tr>
                <td><%= word.text ;%></td>
                <td><%= word.definition ;%></td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
</body>
</html>